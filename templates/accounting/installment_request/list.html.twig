                                                                                                </option>
                                                                                            {% endfor %}
                                                                                        </select>
                                                                                    </div>
                                                                                    <div class="form-group">
                                                                                        <label>{{ 'accounting.installment.user.personal.information.account.number.title' | trans }}</label>
                                                                                        <input type="text"
                                                                                               class="form-control"
                                                                                               name="chequeAccountNumber" required>
                                                                                    </div>
                                                                                    <div class="form-group">
                                                                                        <label>{{ 'accounting.installment.user.personal.information.salary.account.number.title' | trans }}</label>
                                                                                        <button type="button"
                                                                                                class="btn btn-secondary btn-sm rounded-circle mo-mb-2"
                                                                                                data-toggle="tooltip"
                                                                                                data-placement="top"
                                                                                                title=""
                                                                                                data-original-title="{{ 'accounting.installment.user.personal.information.salary.account.number.tooltip' | trans }}">
                                                                                            ?
                                                                                        </button>
                                                                                        <input type="text"
                                                                                               class="form-control"
                                                                                               name="investAccountNumber" required>
                                                                                    </div>
                                                                                    <div class="form-group m-b-0">
                                                                                        <label>{{ 'accounting.installment.user.personal.information.create.account.year.title' | trans }}</label>
                                                                                        <select class="form-control" required
                                                                                                name="accountCreatedDate">
                                                                                            {#<option value="none">{{ 'general.select.title' | trans }}</option>#}
                                                                                            {% for year in years %}
                                                                                                <option value="{{ year }}">
                                                                                                    {{ year }}
                                                                                                </option>
                                                                                            {% endfor %}
                                                                                        </select>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                            <div class="col-lg-6">
                                                                                <div class="p-20">
                                                                                    <div class="form-group">
                                                                                        <label>{{ 'general.cheque.type.title' | trans }}</label>
                                                                                        <select class="form-control" required
                                                                                                name="chequeType">
                                                                                            {#<option value="none">{{ 'general.select.title' | trans }}</option>#}
                                                                                            {% for chequeType in chequeTypes %}
                                                                                                <option value="{{ chequeType.machineName }}">
                                                                                                    {{ ('accounting.installment.form.cheque.type.drop.down.' ~ chequeType.machineName) | trans }}
                                                                                                </option>
                                                                                            {% endfor %}
                                                                                        </select>
                                                                                    </div>
                                                                                    <div class="form-group">
                                                                                        <label>{{ 'accounting.installment.user.personal.information.bank.code.branch.name.title' | trans }}</label>
                                                                                        <input type="text"
                                                                                               class="form-control"
                                                                                               name="branchName" required>
                                                                                    </div>
                                                                                    <div class="form-group">
                                                                                        <label>{{ 'accounting.installment.user.personal.information.product.type.and.description.title' | trans }}</label>
                                                                                        <input type="text"
                                                                                               class="form-control"
                                                                                               name="productName" required>
                                                                                    </div>
                                                                                    <div class="form-group">
                                                                                        <label>{{ 'general.buy.price.title' | trans }}</label>
                                                                                        <input type="text"
                                                                                               class="form-control"
                                                                                               name="productPrice" required>
                                                                                    </div>
                                                                                </div>
                                                                            </div> <!-- end col -->
                                                                        </div> <!-- end row -->
                                                                    </div>
                                                                </div>
                                                            </div> <!-- end col -->
                                                            <div class="col-4"></div>
                                                            <div class="col-4">
                                                                <button type="submit"
                                                                        class="btn btn-primary btn-lg btn-block waves-effect waves-light mb-4">{{ 'general.send.title' | trans }}
                                                                </button>
                                                            </div>
                                                            <div class="col-4"></div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div> <!-- end col -->
                                    </div>

                                </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div>
                    {% endif %}
                    {#New Request Installment Payment Modal - Customer#}
                </div>
            </div>
        </div>
        {#Buttons and Modals#}


        {#Installment Payments Table - Admin#}
