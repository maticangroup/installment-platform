                                                        <a href="{{ path('accounting_installment_request_change_status' , {installment_id:installmentPayment.requestID , machine_name:'accepted' }) }}"
                                                           class="btn btn-success waves-effect waves-light">{{ 'general.accept.title' | trans }}</a>
