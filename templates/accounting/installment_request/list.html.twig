                                                           class="btn btn-danger waves-effect waves-light">{{ 'general.reject.title' | trans }}</a>
                                                    {% elseif installmentPayment.requestStatus == 'accepted' %}
                                                        {{ 'general.accepted.title' | trans }}
                                                    {% elseif installmentPayment.requestStatus == 'rejected' %}
                                                        {{ 'general.rejected.title' | trans }}
                                                    {% endif %}
                                                {% else %}
                                                    {% if installmentPayment.requestStatus == 'waiting' %}
                                                        {{ 'general.waiting.title' | trans }}
                                                    {% elseif installmentPayment.requestStatus == 'accepted' %}
                                                        {{ 'general.accepted.title' | trans }}
                                                    {% elseif installmentPayment.requestStatus == 'rejected' %}
                                                        {{ 'general.rejected.title' | trans }}
                                                    {% endif %}

                                                {% endif %}
                                            </td>
                                            {% if canSeeAllUsers %}
                                                <td>
                                                    {#New Modal#}
                                                    <button type="button"
                                                            class="btn btn-info waves-effect waves-light"
                                                            data-toggle="modal"
                                                            data-target="#requestModal{{ installmentPayment.requestId }}">{{ 'accounting.installment.user.personal.information.title' | trans }}
                                                    </button>


                                                    <div class="modal fade bs-example-modal-lg" tabindex="-1"
