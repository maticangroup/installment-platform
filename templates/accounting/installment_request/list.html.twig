{% extends 'base.html.twig' %}

{% block title %}{{ 'accounting.installment.list.tab.title' | trans }}{% endblock %}

{% block body %}
    {% if userName %}


        {#Analytics Boxes - Admin#}
        {% if canSeeAllUsers %}
            <div class="row mt-5">

                <div class="col-sm-6 col-xl-3">
                    <div class="card">
                        <div class="card-heading p-4">
                            <div class="mini-stat-icon float-right">
                                <i class="mdi mdi-cube-outline bg-primary  text-white"></i>
                            </div>
                            <div>
                                <h5 class="font-16">{{ 'accounting.installment.admin.analysis.all.requests.title' | trans }}</h5>
                            </div>
                            <h3 class="mt-4"><span style="font-size: 40px !important;">{{ allRequests }}</span></h3>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-xl-3">
                    <div class="card">
                        <div class="card-heading p-4">
                            <div class="mini-stat-icon float-right">
                                <i class="mdi mdi-briefcase-check bg-success text-white"></i>
                            </div>
                            <div>
                                <h5 class="font-16">{{ 'accounting.installment.admin.analysis.accepted.requests.title' | trans }}</h5>
                            </div>
                            <h3 class="mt-4"><span style="font-size: 40px !important;">{{ allAcceptedRequests }}</span>
                            </h3>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-xl-3">
                    <div class="card">
                        <div class="card-heading p-4">
                            <div class="mini-stat-icon float-right">
                                <i class="mdi mdi-buffer bg-danger text-white"></i>
                            </div>
                            <div>
                                <h5 class="font-16">{{ 'accounting.installment.admin.analysis.rejected.requests.title' | trans }}</h5>
                            </div>
                            <h3 class="mt-4"><span style="font-size: 40px !important;">{{ allRejectedRequests }}</span>
                            </h3>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-xl-3">
                    <div class="card">
                        <div class="card-heading p-4">
                            <div class="mini-stat-icon float-right">
                                <i class="mdi mdi-tag-text-outline bg-warning text-white"></i>
                            </div>
                            <div>
                                <h5 class="font-16">{{ 'accounting.installment.admin.analysis.waiting.requests.title' | trans }}</h5>
                            </div>
                            <h3 class="mt-4"><span style="font-size: 40px !important;">{{ allWaitingRequests }}</span>
                            </h3>
                        </div>
                    </div>
                </div>

            </div>
        {% endif %}
        {#Analytics Boxes - Admin#}



        {#Buttons and Modals#}
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-sm-4">
                    <div class="alert alert-danger alert-dismissible fade {{ (app.session.flashBag.peek('f')) ? 'show' : '' }}" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        {% for message in app.session.flashBag.get('f') %}
                            {{ message }}
                        {% endfor %}
                    </div>
                    <div class="alert alert-success alert-dismissible fade {{ (app.session.flashBag.peek('s')) ? 'show' : '' }}" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        {% for message in app.session.flashBag.get('s') %}
                            {{ message }}
                        {% endfor %}
                    </div>
                </div>
                <div class="col-sm-2"></div>
                <div class="col-sm-6">

                    {#New Request Installment Payment Button - Customer#}
                    {% if canNewRequest %}
                        <button type="button" class="btn btn-primary waves-effect waves-light" data-toggle="modal"
                                data-target=".bs-example-modal-lg">{{ 'accounting.installment.new.request.button.title' | trans }}
                        </button>
                    {% endif %}
                    {#New Request Installment Payment Button - Customer#}


                    {#Calculation Button - Admin and Customer (Modal Opened With JS File)#}
                    <button id="openModal" type="button" class="btn btn-secondary waves-effect waves-light"
                            data-toggle="modal"
                            data-target="#installment-calculator"
                            data-type="2"> {{ 'accounting.installment.calculate.button.title' | trans }}
                    </button>
                    {#Calculation Button - Admin and Customer (Modal Opened With JS File)#}


                    {#New Request Installment Payment Modal - Customer#}
                    {% if canNewRequest %}
                        <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog"
                             aria-labelledby="mySmallModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title mt-0">{{ 'accounting.installment.new.request.modal.title' | trans }}</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="card m-b-30">
                                                <div class="card-body">
                                                    <form action="{{ path('accounting_installment_request_create') }}"
                                                          method="post">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <div class="card m-b-30">
                                                                    <div class="card-body">
                                                                        <h4 class="mt-0 header-title">{{ 'general.bank.information.title' | trans }}</h4>
                                                                        <p class="sub-title">{{ 'accounting.installment.user.personal.information.description' | trans }}</p>
                                                                        <div class="row">
                                                                            <div class="col-lg-6">
                                                                                <div class="p-20">
                                                                                    <div class="form-group">
                                                                                        <label>{{ 'general.buy.type.title' | trans }}</label>
                                                                                        <select class="form-control" required
                                                                                                name="buyType">
                                                                                            {#<option value="none">{{ 'general.select.title' | trans }}</option>#}
                                                                                            {% for buyType in buyTypes %}
                                                                                                <option value="{{ buyType.machineName }}">
                                                                                                    {{ ('accounting.installment.form.buy.type.drop.down.' ~ buyType.machineName) | trans }}
                                                                                                </option>
                                                                                            {% endfor %}
                                                                                        </select>
                                                                                    </div>
                                                                                    <div class="form-group">
                                                                                        <label>{{ 'general.bank.title' | trans }}</label>
                                                                                        <select class="form-control" required
                                                                                                name="bank">
                                                                                            {#<option value="none">{{ 'general.select.title' | trans }}</option>#}
                                                                                            {% for bank in banks %}
                                                                                                <option value="{{ bank.machineName }}">
